<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
    <div class="card">
        <div class="card-header">
            <h1>To Do App</h1>
        </div>
        <div class="card-body">
            <form action="/" method="POST">
                <label for="todo">New to do</label>
                <input type="text" id="todo" name="todo" title="todo">
                <button class="btn" type="submit">Add</button>
            </form>
            <div class="card-body-col-left">
                <h2>To do</h2>
                <ol class="card-body-to-do-list">
                    <% todosToDo.forEach(todo => { %>
                        <li class="todo-row">
                            <%= todo.text %> 
                            <form action="/<%= todo.id %>?_method=DELETE" method="POST">
                                <button type="submit">&times;</button>
                            </form>
                            <form action="/<%= todo.id %>?_method=PUT" method="POST">
                                <button type="submit">&#10003;</button>
                            </form>
                        </li>
                    <% }) %>
                </ol>
            </div>
            <div class="card-body-col-right">
                <h2>Done</h2>
                <ol>
                    <% todosDone.forEach(todo => { %>
                        <li class="todo-row">
                            <%= todo.text %> 
                            <form action="/<%= todo.id %>?_method=DELETE" method="POST">
                                <button type="submit">&times;</button>
                            </form>
                        </li>
                    <% }) %>
                </ol>
            </div>
        </div>
    </div>
</body>
</html>